# Theme
include gruvbox_dark.conf

# Font
font_size 16.0
modify_font cell_height 125%

# Cursor
cursor_beam_thickness 2
cursor #20C20E

# Window Settings
# window_padding_width 5 0 0 0

# Tabs
tab_bar_edge top
tab_bar_style fade

# Switch tabs
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4

map cmd+n next_tab
map cmd+p previous_tab

# BEGIN_KITTY_FONTS
font_family      family="GeistMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
